- content_for :title do
  = I18n.t(:"title.planet.edit")
.row
  .col-xs-12.col-md-12

    .row
      .col-xs-12.col-md-8
        %h2
          = I18n.t(:"headlines.admin.planet.edit", planet: planet.name)

      .col-xs-12.col-md-4
        .btn-group.pull-right.resource-nav
          = link_to I18n.t(:"actions.back"), admin_planets_path(params: index_back_params, anchor: planet.id), class: "btn btn-default"

    .well
      = render "form"
