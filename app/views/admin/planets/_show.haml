%tr{id: planet.id}
  %td.preview.text-center
    = image_tag planet.store_image.url
  %td
    = planet.name
  %td
    = planet.starsystem.name
  %td.text-right
    .btn-group
      = link_to edit_admin_planet_path(planet), title: I18n.t(:"actions.edit"), class: "btn btn-default" do
        %i.fa.fa-edit
      = confirm_link_to admin_planet_path(planet), data: { notyConfirm: I18n.t(:"messages.confirm.delete") }, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger" do
        %i.fa.fa-trash
