.table-responsive
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th.preview
        %th=sort_link(@q, :name)
        %th=sort_link(@q, :starsystem_name, 'Starsystem')
        %th.actions.actions-five-ladda=I18n.t(:"labels.table.actions")
    %tbody
      = render partial: "admin/planets/show", collection: @planets, as: :planet

      - if @planets.blank?
        = render "shared/tables/blank", count: 3, resource: 'planet'
