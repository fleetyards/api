= form_for [:admin, planet], html: { multipart: true } do |form|
  .row
    .col-xs-12.col-md-6.form-group{class: form_error?(planet, :name)}
      = form.label :name
      = form.text_field :name, class: 'form-control'
      %small
        = form_errors planet, :name

    .col-xs-12.col-md-6.form-group{class: form_error?(planet, :starsystem_id)}
      = form.label :starsystem_id
      = form.select :starsystem_id, Starsystem.all.order(name: :asc).map { |c| [c.name, c.id] }, { include_blank: I18n.t(:"helpers.prompt.planets.starsystem") }, { class: 'form-control' }
      %small
        = form_errors planet, :starsystem_id

    .col-xs-12.col-md-6.form-group{class: form_error?(planet, :store_image)}
      = form.label :store_image
      = form.file_field :store_image, class: 'form-control'
      = form.hidden_field :store_image_cache
      %br
      - if planet.store_image?
        = image_tag(planet.store_image.url)
        = form.check_box :remove_store_image
        Remove Image
      %small
        = form_errors planet, :store_image

    .col-xs-12.col-md-6.form-group{class: form_error?(planet, :map)}
      = form.label :map
      = form.file_field :map, class: 'form-control'
      = form.hidden_field :map_cache
      %br
      - if planet.map?
        = image_tag(planet.map.url)
        = form.check_box :remove_map
        Remove Map
      %small
        = form_errors planet, :map

  = render "shared/submit", path: admin_planets_path
